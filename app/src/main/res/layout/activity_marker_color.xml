<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E0E0">

    <androidx.cardview.widget.CardView
        android:id="@+id/stepCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STEP 4"
                android:textColor="#2196F3"
                android:textSize="14sp"
                android:textStyle="bold"
                android:letterSpacing="0.1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="마커 색상 설정"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="분석 결과를 표시할 마커의 색상을 선택해주세요."
                android:textColor="#000000"
                android:textSize="14sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/blueButton"
        android:layout_width="200dp"
        android:layout_height="56dp"
        android:text="파란색"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="#2196F3"
        android:elevation="4dp"
        android:fontFamily="@font/robotolight"
        app:cornerRadius="28dp"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@id/stepCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/greenButton"
        android:layout_width="200dp"
        android:layout_height="56dp"
        android:text="초록색"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="#4CAF50"
        android:elevation="4dp"
        android:fontFamily="@font/robotolight"
        app:cornerRadius="28dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/blueButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/whiteButton"
        android:layout_width="200dp"
        android:layout_height="56dp"
        android:text="흰색"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="#FFFFFF"
        android:textColor="#2C3E50"
        android:elevation="4dp"
        android:fontFamily="@font/robotolight"
        app:strokeColor="#E0E0E0"
        app:strokeWidth="1dp"
        app:cornerRadius="28dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/greenButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/yellowButton"
        android:layout_width="200dp"
        android:layout_height="56dp"
        android:text="노란색"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="#FFEB3B"
        android:textColor="#2C3E50"
        android:elevation="4dp"
        android:fontFamily="@font/robotolight"
        app:cornerRadius="28dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/whiteButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/redButton"
        android:layout_width="200dp"
        android:layout_height="56dp"
        android:text="빨간색"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="#F44336"
        android:elevation="4dp"
        android:fontFamily="@font/robotolight"
        app:cornerRadius="28dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/yellowButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout> 